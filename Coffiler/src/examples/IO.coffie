#include <stdio.h>

int main() {
    int num;
    int buffer[20]; // Buffer para string
    int lixo[5];    // Buffer para limpar o enter

    // SCANF
    printf("Digite um numero inteiro: ");
    scanf("%d", &num);
    printf("Voce digitou: %d\n", num);

    // Limpeza de buffer (Necessario apos scanf)
    gets(lixo); 

    // GETS
    printf("Digite seu nome: ");
    gets(buffer);
    
    printf("Ola, ");
    puts(buffer);

    return 0;
}